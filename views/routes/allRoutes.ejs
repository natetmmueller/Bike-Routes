<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/show.css">
    <title>Bike Routes</title>
</head>
<body>
    <nav class="navbar navbar-dark bg-primary p-2" class="showNav">
        <a href="/" class="btn btn-outline-light">Home</a>

        <a href="/auth/signin" class="btn btn-outline-light"> Login </a>
        
        <a href="/auth/signup" class="btn btn-outline-light"> Sign Up </a>

        <a href="/auth/logout" class="btn btn-outline-light">Logout</a>

    </nav>

    <div class="headerAndButton">
        <h1> Bike Routes</h1>  
            <a href="new" class="btn btn-success" id="newRouteButton">Add A New Route</a>
    </div>  
        <br>
        <br>

            <div class="d-flex justify-content-center flex-wrap">
                <% routes.forEach(function(route) { %>
                    <div class="card m-2" style="width: 24rem;"> 
                        <div class="card-body">
                            <h5 class="card-title"><td>Route Name: <%=route.routeName%></td></h5>
                            <br>
                            <h6 class="card-subtitle mb-2 text-muted"><td>User: <%=route.user%></td></h6>
                            <br>
                            <p class="card-text">
                                <td>Distance (km): <%=route.distance%></td>
                                <br>
                                <td>Elevation (m): <%=route.elevation%></td>
                                <br>
                                <td>Time it takes (min): <%=route.timeItTakes%></td>
                                <br>
                                <td>Starting Address: <%=route.sAddress%></td>
                                <br>
                                <td>finishing Address: <%=route.fAddress%></td>
                            </p>
                            
    
                            <td><a href="/routes/<%= route.id %>" class="btn btn-outline-secondary">Learn More</a></td>
                            <td><a href="/routes/edit/<%= route.id %>" class="btn btn-outline-info">Edit Route</a></td>
                            <td><a href="/routes/delete/<%= route.id %>"  class="btn btn-outline-danger">Remove Route</a></td>
                        </div>
                    </div>
                <% }); %>
                <br>
            </div>
            
    
</body>
</html>