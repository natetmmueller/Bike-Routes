<%- include('../partials/header') %>

    <h1>Edit Route</h1>

    <form method="post" action="/routes/all?_method=PUT">

        <div class="form-group">
            <label>Route Name: </label>
            <input type="text" name="routeName" value="<%= routes.routeName%>" class="form-control">
        </div>
        <br>
        <div class="form-group">
            <label>Distance (km): </label>
            <input type="number" name="distance" value="<%= routes.distance%>" class="form-control">
        </div>
        <br>
        <div class="form-group">
            <label>Elevation (m): </label>
            <input type="number" name="elevation" value="<%= routes.elevation%>" class="form-control">
        </div>
        <br>
        <div class="form-group">
            <label>Time it takes (min): </label>
            <input type="number" name="timeItTakes" value="<%= routes.timeItTakes%>" class="form-control">
        </div>
        <br>
        <div class="form-group">
            <label>Starting Address: </label>
            <input type="text" name="sAddress" value="<%= routes.sAddress%>" class="form-control">
        </div>
        <br>
        <div class="form-group">
            <label>Finishing Address: </label>
            <input type="text" name="fAddress" value="<%= routes.fAddress%>" class="form-control">
        </div>
        <br>
        <input type="text" name="id" value="<%= routes.id%>" hidden>

        <button type="submit" class="btn btn-success">Update Route</button>
        
    </form>

<%- include('../partials/footer') %>